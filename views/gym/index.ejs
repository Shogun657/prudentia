<% layout('layouts/boilerplate') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/pages.css" />
  </head>
  <body>
<div id="map" style="width: 100%; height: 500px;"></div>

    <br>
    <br>
    <h1 class="all_gyms" style="margin-left: 2.2%; text-align: center;">All Gyms</h1>
    <br>
    <div style="margin-top: 10px;margin-bottom: 10px; padding-left: 25px;">
        <button class="btn btn-success mb-3" style="margin-left: 2.2%; padding: 10px; background-color: #f35e3e;"><a href="/gyms/new" style="text-decoration: none; color: black; ">Add New Gym</a></button>
    </div>
    <ul>
        
      <% for (let gym of gyms){%>
          <div class="card bg-dark text-white mb-3" style="max-height: 33vh">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" style="max-height: 33vh; " alt="" src="<%= gym.images[0].url  %>">
                </div> 
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= gym.name  %></h5>
                        <p class="card-text"><%= gym.description %></p>
                        <p class="card-text">
                            <small class="text-white"><%= gym.location  %></small>
                        </p>
                        <a href="/gyms/<%= gym._id %>"><button class="btn btn-success" style="background-color: black;">Show Details</button></a>
                    </div>
                </div>
            </div>
        </div>
      <% } %>
    </ul>
  </body>
</html>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const gyms = {features:<%- JSON.stringify(gyms)%>}
</script>
<script src="/javascripts/clusterMap.js"></script>

</body>

</html>