<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Add a New Entry</h1>
    <div class="col-6 offset-3">
      <form
        action="/recs"
        method="POST"
        novalidate
        class="validated-form"

      >
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input
            class="form-control"
            type="text"
            name="title"
            id="title"
            placeholder="Title"
            required
          />
          <div class="valid-feedback">Looks Good!</div>
        </div>
  
        <div class="mb-3">
          <label class="form-label" for="content">Content</label>
          <textarea
            class="form-control"
            id="content"
            name="content"
            placeholder="Content"
            required
          ></textarea>
          <div class="valid-feedback">Looks Good!</div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="tags">Tags (comma-separated)</label>
          <input
            class="form-control"
            type="text"
            name="tags"
            id="tags"
            placeholder="Tags"
          />
        </div>
  
        <div class="mb-3">
          <button class="btn btn-success">Add Entry</button>
        </div>
      </form>
      <a href="/journals">All Entries</a>
    </div>
</div>
