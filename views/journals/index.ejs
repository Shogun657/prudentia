<% layout('layouts/boilerplate') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/journal.css">
</head>
<body>
  <h1 class="heading11"><%= greeting %></h1>
  <div style="padding-left: 20px;">
    <button class="btn btn-success mb-3 add"><a href="/journals/new" style="text-decoration: none; color: inherit; ">Add New Entry</a></button>
  </div>
  <ul>
    <% for (let journal of journals) { %>
      <% if( currentUser && journal.author.equals(currentUser._id)) { %>
        <a  href="/journals/<%= journal._id %>">
          <div class="card text-bg-dark mb-3" style="height: 30vh; transition: transform 0.3s ease;" onmouseover="this.style.transform = 'scale(1.05)';" onmouseout="this.style.transform = 'scale(1)';">
            <img src="journal2.jpeg" class="card-img mb-5" alt="<%= journal.images[0].filename %>" style="object-fit: cover; width: 100%; height: 100%;">
            <div class="card-img-overlay">
              <h5 class="card-title"><%= journal.title %></h5>
              <p class="card-text"><%= journal.content %></p>
              <p class="card-text"><small><%= journal.createdAt %></small></p>
            </div>
          </div>
        </a>
      <% } %>
    <% } %>
  </ul>
</body>
</html>
